<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>

    <body>
        <%- include('./partials/nav.ejs') %>

            <div class="container">
                <h1>Add Song to <span>Melodify</span></h1>
                <form action="/add-song" method="POST">
                    <label for="songname">Song Name:</label>
                    <input type="text" id="songname" name="songname" required>
                    <br>
                    <label for="songcategory">Song Category:</label>
                    <input type="text" id="songcategory" name="songcategory" required>
                    <br>
                    <label for="songduration">Song Duration:</label>
                    <input type="text" id="songduration" name="songduration" required>
                    <br>
                    <label for="songartist">Song Artist:</label>
                    <input type="text" id="songartist" name="songartist" required>
                    <br>
                    <label for="songfilepath">Song File Path:</label>
                    <input type="text" id="songfilepath" name="songfilepath" required>
                    <br>
                    <button type="submit">Add Song</button>
                </form>
            </div>

            <%- include('./partials/footer.ejs')%>

                <script src="script.js"></script>
    </body>

</html>