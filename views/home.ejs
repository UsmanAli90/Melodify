<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Music Player</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="./style.css" />
  </head>

  <body>
    <!-- partial:index.partial.html -->
    <!-- PRESS THE MENU BUTTON TO TRIGGER ANIMATION -->
    <!-- PRESS PLAY BUTTON TO LISTEN THE DEMO SONG -->

    <!-- As seen on: "https://dribbble.com/shots/2144866-Day-5-Music-Player-Rebound/" -->

    <!-- THANK YOU! -->

    <article class="screen">
      <input type="checkbox" value="None" id="magicButton" name="check" />
      <label class="main" for="magicButton"></label>

      <div class="coverImage"></div>
      <div class="search">
        <div class="search-icon">
          <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        <div class="search-input-container"></div>
        <div class="profile-icon">
          <i class="fa-solid fa-user"></i>
          <div class="profile-icon-inner"></div>
          <div class="dropdown-content">
            <a href="/profile">Username</a>
            <a href="/settings">Settings</a>
            <a href="/logout">Logout</a>
          </div>
        </div>
      </div>

      <div class="bodyPlayer">
        <% for (let i = 0; i < songs.length; i++) { %>
        <div class="info">
          <h4><%= songs[i].title %></h4>
          <h3><%= songs[i].artist %> - <%= songs[i].album %></h3>
        </div>
        <div class="shadow"></div>
        <div class="bar"></div>
        <audio controls>
          <source src="<%= songs[i].path %>" />
          Your browser does not support the audio element.
        </audio>

        <table class="player">
          <tr>
            <td>
              <input type="checkbox" id="backward<%= i %>" /><label
                class="backward"
                for="backward<%= i %>"
              ></label>
            </td>
            <td>
              <input
                type="checkbox"
                id="play<%= i %>"
                title="Play"
                onclick="togglePlayPause('audio<%= i %>')"
              /><label class="play" for="play<%= i %>"></label>
            </td>
            <td>
              <input type="checkbox" id="forward<%= i %>" /><label
                class="forward"
                for="forward<%= i %>"
              ></label>
            </td>
          </tr>
        </table>

        <table class="footer">
          <tr>
            <td>
              <input type="checkbox" id="love<%= i %>" checked /><label
                class="love"
                for="love<%= i %>"
              ></label>
            </td>
            <td>
              <input type="checkbox" id="shuffle<%= i %>" /><label
                class="shuffle"
                for="shuffle<%= i %>"
              ></label>
            </td>
            <td>
              <input type="checkbox" id="repeat<%= i %>" checked /><label
                class="repeat"
                for="repeat<%= i %>"
              ></label>
            </td>
            <td>
              <input type="checkbox" id="options<%= i %>" /><label
                class="options"
                for="options<%= i %>"
              ></label>
            </td>
          </tr>
        </table>

        <div class="current"></div>
        <% } %>
      </div>
    </article>

    <!-- partial -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/script.js"></script>
  </body>
</html>
